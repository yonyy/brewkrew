{
  "name": "brewkrew",
  "version": "1.0.0",
  "description": "Just a group of friends conquering San Diego one brewery at a time",
  "main": "index.html",
  "repository": "https://github.com/yonyy/brewkrew",
  "author": "Yonatan Perez",
  "license": "MIT",
  "dependencies": {
    "jquery": "^3.4.1",
    "lodash": "^4.17.10",
    "prop-types": "^15.6.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-redux": "^6.0.1",
    "redux": "^4.0.1"
  },
  "devDependencies": {
    "eslint": "^4.19.1",
    "eslint-plugin-react": "^7.13.0",
    "husky": "^1.3.1",
    "parcel-bundler": "^1.12.3",
    "prettier": "^1.17.1",
    "pretty-quick": "^1.10.0",
    "sass": "^1.20.1"
  },
  "scripts": {
    "copy-images": "cp -r src/images dist/",
    "clean": "rm -rf ./dist/*",
    "start": "npm run clean && npm run copy-images && parcel index.html -p 8080 --open",
    "build": "npm run clean && npm run copy-images && parcel build index.html --out-dir dist/ --no-source-maps --detailed-report",
    "sync": "npm run build && npm run syncAssets && npm run syncHTML",
    "syncAssets": "aws s3 sync ./dist s3://brewkrew.io/ --exclude *.html --exclude *.map --cache-control 'max-age=31536000'",
    "syncHTML": "aws s3 sync ./dist s3://brewkrew.io/ --exclude *.js.* --exclude *.css.* --cache-control 'no-cache' --delete",
    "pretty": "prettier --write '**/src/*.js'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged --pattern '**/*.js'"
    }
  }
}
